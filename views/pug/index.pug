extends layouts/layout.pug

block content 
  // Hero Section
  section.text-gray-600.body-font
      .container.mx-auto.flex.px-5.py-24.items-center.justify-center.flex-col
        img.mb-10.object-cover.object-center.rounded(class='lg:w-2/6 md:w-3/6 w-5/6', alt='hero', src='https://dummyimage.com/720x600')
        .text-center.w-full(class='lg:w-2/3')
          h1.title-font.text-3xl.mb-4.font-medium.text-gray-900(class='sm:text-4xl') Microdosing synth tattooed vexillologist
          p.mb-8.leading-relaxed
            | Meggings kinfolk echo park stumptown DIY, kale chips beard jianbing tousled. Chambray dreamcatcher trust fund, kitsch vice godard disrupt ramps hexagon mustache umami snackwave tilde chillwave ugh. Pour-over meditation PBR&amp;B pickled ennui celiac mlkshk freegan photo booth af fingerstache pitchfork.
          .flex.justify-center
            button.inline-flex.text-white.bg-indigo-500.border-0.py-2.px-6.rounded.text-lg(class='focus:outline-none hover:bg-indigo-600') Button
            button.ml-4.inline-flex.text-gray-700.bg-gray-100.border-0.py-2.px-6.rounded.text-lg(class='focus:outline-none hover:bg-gray-200') Button

  // Info Section and will populate
  section.text-gray-600.body-font.relative
      .container.px-5.py-24.mx-auto
        .flex.flex-col.text-center.w-full.mb-12
          h1.text-2xl.font-medium.title-font.mb-4.text-gray-900(class='sm:text-3xl') Feedback Form
          p.mx-auto.leading-relaxed.text-base(class='lg:w-2/3') Whatever cardigan tote bag tumblr hexagon brooklyn asymmetrical gentrify.
        .mx-auto(class='lg:w-1/2 md:w-2/3')
          form.flex.flex-wrap.-m-2(method='POST',action="/")
            .p-2(class='w-1/2')
              .relative
                label.leading-7.text-sm.text-gray-600(for='name') Name
                input#name.w-full.bg-gray-100.bg-opacity-50.rounded.border.border-gray-300.text-base.outline-none.text-gray-700.py-1.px-3.leading-8.transition-colors.duration-200.ease-in-out(type='text', name='name', class='focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200')
            .p-2(class='w-1/2')
              .relative
                label.leading-7.text-sm.text-gray-600(for='email') Email
                input#email.w-full.bg-gray-100.bg-opacity-50.rounded.border.border-gray-300.text-base.outline-none.text-gray-700.py-1.px-3.leading-8.transition-colors.duration-200.ease-in-out(type='email', name='email', class='focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200')
            .p-2.w-full
              .relative
                label.leading-7.text-sm.text-gray-600(for='message') Message
                textarea#message.w-full.bg-gray-100.bg-opacity-50.rounded.border.border-gray-300.h-32.text-base.outline-none.text-gray-700.py-1.px-3.resize-none.leading-6.transition-colors.duration-200.ease-in-out(name='message', class='focus:border-indigo-500 focus:bg-white focus:ring-2 focus:ring-indigo-200')
            .p-2.w-full
              button.flex.mx-auto.text-white.bg-indigo-500.border-0.py-2.px-8.rounded.text-lg(class='focus:outline-none hover:bg-indigo-600',type="submit") Button
            .p-2.w-full.pt-8.mt-8.border-t.border-gray-200.text-center
              a.text-indigo-500 example@email.com
              p.leading-normal.my-5
                | 49 Smith St.
                br
                | Saint Cloud, MN 56301
              span.inline-flex
                a.text-gray-500
                  svg.w-5.h-5(fill='currentColor', stroke-linecap='round', stroke-linejoin='round', stroke-width='2', viewBox='0 0 24 24')
                    path(d='M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z')
                a.ml-4.text-gray-500
                  svg.w-5.h-5(fill='currentColor', stroke-linecap='round', stroke-linejoin='round', stroke-width='2', viewBox='0 0 24 24')
                    path(d='M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z')
                a.ml-4.text-gray-500
                  svg.w-5.h-5(fill='none', stroke='currentColor', stroke-linecap='round', stroke-linejoin='round', stroke-width='2', viewBox='0 0 24 24')
                    rect(width='20', height='20', x='2', y='2', rx='5', ry='5')
                    path(d='M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01')
                a.ml-4.text-gray-500
                  svg.w-5.h-5(fill='currentColor', stroke-linecap='round', stroke-linejoin='round', stroke-width='2', viewBox='0 0 24 24')
                    path(d='M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z')

  // Section Population Field
  section.text-gray-600.body-font
      .container.px-5.py-24.mx-auto
        .flex.flex-wrap.-m-4
          if feedback.length > 0
            each feed in feedback
              .mb-6.p-4(class='lg:w-1/3 lg:mb-0')
                .h-full.text-center
                  p.leading-relaxed
                    | #{feed.message}
                  span.inline-block.h-1.w-10.rounded.bg-indigo-500.mt-6.mb-4
                  h2.text-gray-900.font-medium.title-font.tracking-wider.text-sm #{feed.name}
                  p.text-gray-500 #{feed.email}
